extends ./layouts/main

block content
  .form-container
    h1 계정 만들기
    form(action=routes.join method="post")
      input(type="text" name="name" placeholder="이름" required=true)
      input(type="email" name="email" placeholder="이메일 주소" required=true)
      input(type="password" name="password" placeholder="비밀번호" required=true)
      input(type="password" name="verifyPassword" placeholder="확인" required=true)
      input(type="submit" value="확인")